{
  "build": {
    "content": [
      {
        "files": [
		  "powershell/**/**.md",
		  "powershell/**/toc.yml",
		  "powershell/**.md",
		  "powershell/toc.yml",
		  "toc.yml",
		  "*.md"
		]
      },
	  {
		"files": [
		  "console/**/**.md",
		  "console/**/toc.yml",
		  "console/**.md",
		  "console/toc.yml",
		  "toc.yml",
		  "*.md"
		]
	  },
	  {
		"files": [
		  "general/**/**.md",
		  "general/**/toc.yml",
		  "general/**.md",
		  "general/toc.yml",
		  "toc.yml",
		  "*.md"
		]
	  },
	  {
		"files": "*.{md,yml}"
	  }
    ],
    "resource": [
      {
        "files": [
          "images/**",
		  "logo.svg",
		  "favicon.ico"
        ]
      }
    ],
    "overwrite": [
      {
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
	  "template"
    ],
    "postProcessors": [],
	"markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "disableGitFeatures": false,
	"globalMetadata": {
	  "_appTitle": "DW Scripts Lib",
	  "_gitContribute": {
	    "repo": "https://github.com/dlw-digitalworkplace/dw-script-lib",
		"branch": "main"
	  },
	  "_description": "This library will give you explanations on handy scripts created by your colleagues.",
	  "_enableNewTab": true,
	  "_enableSearch": true,
	  "_appLogoPath": "images/dlw-logo.jpg",
	  "_appFaviconPath": "images/favicon.ico"
	}
  }
}